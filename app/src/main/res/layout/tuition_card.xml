<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/person_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:descendantFocusability="blocksDescendants"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    tools:cardBackgroundColor="@drawable/gradient5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/mti_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/str_left_margin"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/str_label_width"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/str_field_gap"
                android:text="Name: "
                android:textAppearance="@android:style/TextAppearance.Material.Small"
                android:textColor="@color/textColorDark" />

            <TextView
                android:id="@+id/mti_name_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/str_field_gap"
                android:textAppearance="@android:style/TextAppearance.Material.Small"
                android:textColor="@color/textColorDark" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mti_sub_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/str_left_margin"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/str_label_width"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/str_field_gap"
                android:text="Subjects: "
                android:textAppearance="@android:style/TextAppearance.Material.Small"
                android:textColor="@color/textColorDark" />

            <TextView
                android:id="@+id/mti_sub_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/str_field_gap"
                android:textAppearance="@android:style/TextAppearance.Material.Small"
                android:textColor="@color/textColorDark" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mti_address_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/str_left_margin"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/str_label_width"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/str_field_gap"
                android:text="Address: "
                android:textAppearance="@android:style/TextAppearance.Material.Small"
                android:textColor="@color/textColorDark" />

            <TextView
                android:id="@+id/mti_address_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/str_field_gap"
                android:textAppearance="@android:style/TextAppearance.Material.Small"
                android:textColor="@color/textColorDark" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mti_acl_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/str_left_margin"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/str_label_width"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/str_field_gap"
                android:text="Academic Level: "
                android:textAppearance="@android:style/TextAppearance.Material.Small"
                android:textColor="@color/textColorDark" />

            <TextView
                android:id="@+id/mti_acl_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/str_field_gap"
                android:textAppearance="@android:style/TextAppearance.Material.Small"
                android:textColor="@color/textColorDark" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>