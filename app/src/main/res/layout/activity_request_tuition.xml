<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        tools:context="com.ituition.ituition.RequestTuition">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/rt_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.v7.widget.Toolbar
                android:id="@+id/rt_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                app:layout_scrollFlags="enterAlways"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
        </android.support.design.widget.AppBarLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/rt_subjects"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rt_appbar"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="60dp"
            android:textColorHint="@color/colorPrimary">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/rt_subjects_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Subjects"
                android:textColor="#000000"
                android:textColorHint="@color/colorPrimary" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/rt_address"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rt_subjects"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="12dp"
            android:textColorHint="@color/colorPrimary">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/rt_address_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:textColor="#000000"
                android:textColorHint="@color/colorPrimary" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/rt_acl"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/rt_address"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="12dp"
            android:textColorHint="@color/colorPrimary">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/rt_acl_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Academic Level"
                android:textColor="#000000"
                android:textColorHint="@color/colorPrimary" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/rt_nos"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/rt_acl"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="12dp"
            android:textColorHint="@color/colorPrimary">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/rt_nos_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="No. of Students"
                android:textColor="#000000"
                android:textColorHint="@color/colorPrimary" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/rt_nod"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/rt_nos"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="12dp"
            android:textColorHint="@color/colorPrimary">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/rt_nod_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="No. of days/week"
                android:textColor="#000000"
                android:textColorHint="@color/colorPrimary" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/rt_salary"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/rt_nod"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="12dp"
            android:textColorHint="@color/colorPrimary">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/rt_salary_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Salary/Day"
                android:textColor="#000000"
                android:textColorHint="@color/colorPrimary" />
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/submitRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rt_salary"
            android:layout_centerInParent="true"
            android:layout_marginTop="12dp"
            android:text="Request" />

    </RelativeLayout>
</ScrollView>
