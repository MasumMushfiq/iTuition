<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        tools:context="com.ituition.ituition.Profile">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/str_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.v7.widget.Toolbar
                android:id="@+id/str_toolbar"
                app:layout_scrollFlags="enterAlways"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary" />
        </android.support.design.widget.AppBarLayout>

        <Button
            android:id="@+id/str_tuition_req_label"
            style="@android:style/Widget.Material.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/str_appbar"
            android:text="Tuition Request"
            android:textAppearance="@android:style/TextAppearance.Material.Button" />


        <LinearLayout
            android:id="@+id/str_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/str_left_margin"
            android:layout_below="@id/str_tuition_req_label">

            <TextView
                android:layout_width="@dimen/str_label_width"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/str_field_gap"
                android:text="Name: "
                android:textColor="@color/textColorDark"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

            <TextView
                android:id="@+id/str_name_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/str_field_gap"
                android:textColor="@color/textColorDark"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/str_subject_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/str_left_margin"
            android:orientation="horizontal"
            android:layout_below="@id/str_name_layout">

            <TextView
                android:layout_width="@dimen/str_label_width"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/str_field_gap"
                android:text="Subjects: "
                android:textColor="@color/textColorDark"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

            <TextView
                android:id="@+id/str_subjects_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/str_field_gap"
                android:textColor="@color/textColorDark"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/str_address_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/str_left_margin"
            android:orientation="horizontal"
            android:layout_below="@id/str_subject_layout">

            <TextView
                android:layout_width="@dimen/str_label_width"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/str_field_gap"
                android:text="Address: "
                android:textColor="@color/textColorDark"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

            <TextView
                android:id="@+id/str_address_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/str_field_gap"
                android:textColor="@color/textColorDark"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/str_aclev_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/str_left_margin"
            android:orientation="horizontal"
            android:layout_below="@id/str_address_layout">

            <TextView
                android:layout_width="@dimen/str_label_width"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/str_field_gap"
                android:text="Academic Level: "
                android:textColor="@color/textColorDark"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

            <TextView
                android:id="@+id/str_aclev_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/str_field_gap"
                android:textColor="@color/textColorDark"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/str_nos_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/str_left_margin"
            android:orientation="horizontal"
            android:layout_below="@id/str_aclev_layout">

            <TextView
                android:layout_width="@dimen/str_label_width"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/str_field_gap"
                android:text="No of Students: "
                android:textColor="@color/textColorDark"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

            <TextView
                android:id="@+id/str_nos_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/str_field_gap"
                android:textColor="@color/textColorDark"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/str_ndays_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/str_left_margin"
            android:orientation="horizontal"
            android:layout_below="@id/str_nos_layout">

            <TextView
                android:layout_width="@dimen/str_label_width"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/str_field_gap"
                android:text="Days/Week: "
                android:textColor="@color/textColorDark"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

            <TextView
                android:id="@+id/str_ndays_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/str_field_gap"
                android:textColor="@color/textColorDark"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/str_salary_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/str_left_margin"
            android:orientation="horizontal"
            android:layout_below="@id/str_ndays_layout">

            <TextView
                android:layout_width="@dimen/str_label_width"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/str_field_gap"
                android:text="Salary: "
                android:textColor="@color/textColorDark"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

            <TextView
                android:id="@+id/str_salary_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/str_field_gap"
                android:textColor="@color/textColorDark"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/str_contact_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/str_left_margin"
            android:orientation="horizontal"
            android:layout_below="@id/str_salary_layout">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:src="@drawable/phone"/>

            <TextView
                android:id="@+id/str_contact_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:textColor="@color/textColorDark"
                android:layout_below="@id/str_salary_layout"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/str_email_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/str_left_margin"
            android:orientation="horizontal"
            android:layout_below="@id/str_contact_layout">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:src="@drawable/email"/>

            <TextView
                android:id="@+id/str_email_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_below="@id/str_contact_field"
                android:textColor="@color/textColorDark"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

        </LinearLayout>





        <LinearLayout
            android:id="@+id/str_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="@dimen/str_left_margin"
            android:orientation="horizontal"
            android:layout_below="@id/str_email_layout">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/str_confirm_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:padding="12dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/textColorPrimary"
                android:text="Confirm" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/str_reject_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/common_google_signin_btn_text_light_disabled"
                android:layout_marginLeft="25dp"
                android:padding="12dp"
                android:text="Reject" />


        </LinearLayout>


    </RelativeLayout>

</ScrollView>
