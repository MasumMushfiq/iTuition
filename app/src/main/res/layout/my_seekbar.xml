<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/my_seekbar_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorDark"
        android:paddingTop="5dp"
        android:paddingStart="16dp"
        android:text="1" />

    <SeekBar
        android:id="@+id/my_seekbar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_toEndOf="@+id/my_seekbar_min"
        android:layout_alignTop="@+id/my_seekbar_min"
        android:max="9" />

    <TextView
        android:id="@+id/my_seekbar_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/my_seekbar"
        android:layout_alignTop="@+id/my_seekbar"
        android:text="10"
        android:paddingEnd="16dp"
        android:textColor="@color/textColorDark" />

    <TextView
        android:id="@+id/my_seekbar_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/my_seekbar"
        android:layout_below="@+id/my_seekbar"
        android:layout_marginEnd="144dp"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:text="1"
        android:textColor="@color/textColorDark" />

</RelativeLayout>