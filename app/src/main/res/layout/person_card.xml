<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/person_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginTop="3dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    tools:cardBackgroundColor="@drawable/gradient5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <ImageView
            android:id="@+id/person_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:contentDescription="@string/profile_picture_description"
            android:src="@drawable/ic_contact_picture" />


        <TextView
            android:id="@+id/person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/person_photo"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/person_photo"
            android:text="Shahriar Ahmed Ashrafi"
            android:textColor="@color/textColorDark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/person_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/person_name"
            android:layout_below="@+id/person_name"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/person_photo"
            android:text="Studying CSE at BUET"
            android:textColor="@color/textColorDark"
            android:textSize="15sp" />

        <RatingBar
            android:id="@+id/pc_rating_bar"
            style="@style/RatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/person_background"
            android:layout_alignStart="@id/person_background"
            android:layout_marginTop="3dp"
            android:clickable="false"
            android:isIndicator="true"
            android:rating="3.5" />

        <TextView
            android:id="@+id/pc_rating_bar_value"
            android:layout_toEndOf="@id/pc_rating_bar"
            android:layout_alignTop="@id/pc_rating_bar"
            android:text="3.5"
            android:textColor="@color/textColorDark"
            android:layout_marginStart="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/person_subjects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pc_rating_bar"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="Subjects: Physics, Chemistry, Mathematics"
            android:textColor="@color/textColorDark"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/person_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/person_subjects"
            android:layout_below="@+id/person_subjects"
            android:text="Locations: Gulshan, Dhanmondi, Azimpur"
            android:textColor="@color/textColorDark"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/person_salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/person_location"
            android:layout_below="@+id/person_location"
            android:text="Avg. Salary: 1000/day"
            android:textColor="@color/textColorDark"
            android:textSize="15sp"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>

